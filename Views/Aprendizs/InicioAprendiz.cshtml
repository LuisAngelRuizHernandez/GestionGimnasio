@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InicioAprendiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/Imágenes/favicon.png" />
</head>
<body>
    @{ var nombreAprendiz = Session["NombreAprendiz"] as string; }

    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ff6a00;">
        <div class="container">
            <a class="navbar-brand" href="#">GYMse</a>
            <h6 class="text-white">Aprendiz</h6>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Bienvenido @nombreAprendiz</a></li>
                    <li class="nav-item">@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Aprendizs", new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page content-->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <h1 class="mb-4">Rutina</h1>
                <form action="@Url.Action("Index", "Rutinas")" class="form" method="post">
                    <button type="submit" name="submit" class="btn btn-primary">Ir a rutinas</button>
                </form>

            </div>

            <div id="login-form" class="col-md-8 d-flex flex-column align-items-center justify-content-center">
                <h2 class="mb-4">Ingreso</h2>
                <div class="d-flex gap-2">
                    <form action="@Url.Action("Ingreso", "Aprendizs")" class="form" method="post">
                        <button type="submit" name="submit" class="btn btn-primary">Registrar ingreso</button>
                    </form>

                    <form action="@Url.Action("Egreso", "Aprendizs")" class="form" method="post">
                        <button type="submit" name="submit" class="btn btn-primary">Registrar salida</button>
                    </form>

                </div>
                @if (ViewData["Mensaje1"] != null)
                {
                    <div name="alerta2" class="alert alert-primary" role="alert">
                        @ViewData["Mensaje1"]
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
</body>
</html>
