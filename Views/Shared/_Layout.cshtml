<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Imágenes/favicon.png" rel="icon" />
    <title>GYMse - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Estilos personalizados */
        body {
            background-color: #f5f5f5;
            padding-top: 50px;
        }

        .navbar-inverse {
            background-color: #ff6a00;
            border-color: #ff6a00;
        }

            .navbar-inverse .navbar-brand {
                color: #ffffff;
            }

            .navbar-inverse .navbar-toggle {
                border-color: #ffffff;
            }

                .navbar-inverse .navbar-toggle .icon-bar {
                    background-color: #ffffff;
                }

            .navbar-inverse .navbar-collapse {
                border-color: #ff6a00;
            }

            .navbar-inverse .navbar-nav > li > a {
                color: #ffffff;
            }

                .navbar-inverse .navbar-nav > li > a:hover,
                .navbar-inverse .navbar-nav > li > a:focus {
                    background-color: #e55e00;
                }

        .container.body-content {
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px;
        }

        footer {
            margin-top: 20px;
            text-align: center;
        }

            footer p {
                color: #777777;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ejercicios", "Index", "Ejercicios", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Máquinas", "Index", "Maquinas", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Aprendiz", "Index", "Aprendizs", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Cerrar sesión", "CerrarSesion", "Administrador", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("reporte", "reporteSimple", "Reporte", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
