@model ProyectoGimnasio.Maquina

@{
    ViewBag.Title = "Agregar máquina";
}

<h2>Agregar máquina</h2>
<head>
    <link href="~/Content/Agregar.css" rel="stylesheet" />
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="form-maquina">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombreMaquina, "Nombre de máquina", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreMaquina, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.nombreMaquina, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estadoMaquina, "Estado de máquina", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.estadoMaquina, new List<SelectListItem>
                {
                    new SelectListItem { Value = "Disponible", Text = "Disponible" },
                    new SelectListItem { Value = "No disponible", Text = "No disponible" }
                }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.estadoMaquina, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idAdministrador, "ID de Administrador", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idAdministrador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idAdministrador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-volver" })
</div>
