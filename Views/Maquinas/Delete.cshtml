@model ProyectoGimnasio.Maquina

@{
    ViewBag.Title = "Borrar máquina";
}

<h3>¿Seguro de borrar esta máquina?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre de máquina
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreMaquina)
        </dd>

        <dt>
            Estado de máquina
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estadoMaquina)
        </dd>

        <dt>
            Nombre Administrador
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Administrador.nombreAdministrador)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>
