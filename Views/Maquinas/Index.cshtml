@model IEnumerable<ProyectoGimnasio.Maquina>

@{
    ViewBag.Title = "Máquina";
}

<h2>Máquina</h2>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/Login.css" rel="stylesheet" />
    <link href="~/Content/Bomnito.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/estilos.css" rel="stylesheet" />
</head>
<p>
    <a class="create-new" href="@Url.Action("Create")">Agregar máquina</a>
</p>
<table class="table">
    <tr>
        <th>
            Nombre de máquina
        </th>
        <th>
            Estado de máquina
        </th>
        <th>
            Nombre Admin
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreMaquina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadoMaquina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Administrador.nombreAdministrador)
        </td>
        <td class="action-links">
            @Html.ActionLink("Editar", "Edit", new { id=item.idMaquina }, new { @class = "edit" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idMaquina }, new { @class = "details" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idMaquina }, new { @class = "delete" })
        </td>
    </tr>
}
</table>
