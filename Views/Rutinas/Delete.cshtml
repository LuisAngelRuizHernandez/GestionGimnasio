@model ProyectoGimnasio.Rutina

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Borrar rutina</title>
    <link rel="shortcut icon" href="~/Content/Imágenes/favicon.png" />

</head>
<body>
    <h3>¿Seguro de querer borrar esta rutina?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nombre de rutina
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.nombreRutina)
            </dd>
    
            <dt>
                Aprendiz vinculado
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Aprendiz.nombreAprendiz)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-default" /> |
                @Html.ActionLink("Volver", "Index")
            </div>
        }
    </div>
</body>
</html>
