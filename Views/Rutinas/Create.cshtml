@model ProyectoGimnasio.Rutina

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="shortcut icon" href="~/Content/Imágenes/favicon.png" />
    <link rel="stylesheet" href="~/Content/Agregar.css" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #f8f9fa, #e8e8e8);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 600px;
            padding: 20px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #ff6a00;
            margin-bottom: 20px;
            font-size: 1.5rem;
        }

        .form-horizontal {
            width: 100%;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
            color: #343a40;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ff6a00;
            border-radius: 5px;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #e65c00;
                box-shadow: 0 0 5px rgba(255, 106, 0, 0.5);
            }

        .btn-primary {
            background-color: #ff6a00;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #e65c00;
            }

        .btn-volver {
            display: block;
            text-align: center;
            margin-top: 20px;
            background-color: #ff6a00;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-volver:hover {
                background-color: #e65c00;
            }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form-rutina" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2>Rutina</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.nombreRutina, "Nombre de Rutina", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.nombreRutina, new { htmlAttributes = new { @class = "form-control" }, required = "required" })
                        @Html.ValidationMessageFor(model => model.nombreRutina, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idAprendiz, "Nombre de Aprendiz", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("idAprendiz", ViewBag.idAprendiz as SelectList, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idAprendiz, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <p>
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn-volver" })
        </p>
    </div>
</body>
</html>
