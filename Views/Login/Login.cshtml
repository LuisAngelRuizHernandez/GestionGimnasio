@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/Imágenes/favicon.png" rel="icon" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="shortcut icon" href="~/Content/Imágenes/favicon.png" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #ff6a00;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #login-box {
            width: 100%;
            max-width: 400px;
            border: 1px solid #9C9C9C;
            background-color: #ffffff;
            border-radius: 5px;
            padding: 40px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        }

        #login-form {
            margin-top: 20px;
        }

        #login-box h3 {
            text-align: center;
            margin-bottom: 30px;
            color: #ff6a00;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
                color: #333333;
            }

        .form-control {
            border-radius: 3px;
        }

        .btn-info {
            background-color: #ff6a00;
            border-color: #ff6a00;
        }

            .btn-info:hover {
                background-color: #e55e00;
                border-color: #e55e00;
            }

        .text-info {
            color: #ff6a00;
        }
    </style>
</head>
<body>
    <div id="login-box">
        <h3>Bienvenido a GYMse</h3>
        <form id="login-form" class="form" action="@Url.Action("Login", "Login")" method="post">
            <div class="form-group">
                <label for="username">ID usuario</label>
                <input type="text" name="idAprendiz" id="username" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" name="claveAprendiz" id="password" class="form-control" required>
            </div>
            <div class="form-group text-center">
                <button type="submit" name="submit" class="btn btn-info btn-md">Acceder</button>
            </div>

             @if (ViewData["Mensaje"] != null)
              {
                <div name="alerta" class="alert alert-primary" role="alert">
                    @ViewData["Mensaje"]
                </div>
              }

        </form>
    </div>
</body>
</html>
